<%= form_for @person, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <div class = "person_form">
  	  <p>
	    <%= f.label :first_name %><br />
	    <%= f.text_field :first_name %>
	  </p>
	  <p>
	    <%= f.label :last_name %><br />
	    <%= f.text_field :last_name %>
	  </p>
	  <p>
	    <%= f.label :role %><br />
	    <%= f.text_field :role %>
	  </p>
	  <p>
	    <%= f.label :bio %><br />
	    <%= f.text_area :bio %>
	  </p>
	  <p>
		<%= image_tag @person.headshot.url(:thumb), :width => "60px" if @person.headshot.present? %>
		<%= f.label :headshot %><br />
	  	<%= f.file_field :headshot %>
	  </p>
	  <p>
		<%= image_tag @person.portrait.url(:display), :width => "100px" if @person.portrait.present? %>
		<%= f.label :portrait %><br />
	  	<%= f.file_field :portrait %>
	  </p>
  </div>
  <div class = "person_form">
  	  <p>
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <%= f.label :password %><br />
	    <%= f.text_field :password %>
	  </p>
	  <p>
	    <%= f.label :password_confirmation %><br />
	    <%= f.text_field :password_confirmation %>
	  </p>
	  <p>
	  	<%= f.label :admin? %>
	    <%= f.check_box :admin %>
	  </p>
	  <p>
	  	<%= f.label :display? %>
	    <%= f.check_box :display %>
	  </p>


	  <p><%= f.submit %></p>

  </div>

<% end %>
