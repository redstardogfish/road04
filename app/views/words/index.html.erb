
<%= render 'form' %>


<div id = "word_index">
<h1>Listing words</h1>


<table id = "wordlist">
  <tr>
    <th>Uk</th>
    <th>Us</th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.uk %></td>
    <td><%= word.us %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Delete', word, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
</div>
